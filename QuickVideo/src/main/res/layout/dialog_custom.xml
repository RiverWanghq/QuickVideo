<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_setting_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_play_video_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="@dimen/dimen_32dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:textColor="@color/C010"
            android:text="@string/player_prompt_notwifi_playvideo"
            android:textSize="@dimen/F02"/>
        <include layout="@layout/dialog_bottom_two_btns"/>
    </LinearLayout>

    <View
        android:id="@+id/masking_view"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/root_view"
        android:layout_alignLeft="@+id/root_view"
        android:background="@drawable/dialog_maskdrawable_night"
        android:visibility="gone"/>

</RelativeLayout>