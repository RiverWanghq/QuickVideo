<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <corners android:radius="3dip"/>

            <solid android:color="#ececec"/>

            <stroke android:width="1dip" android:color="#dbdbdb"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="3dip"/>

            <solid android:color="#ffffff"/>

            <stroke android:width="1dip" android:color="#cccccc"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <shape>
            <corners android:radius="3dip"/>

            <solid android:color="@color/dialog_btn1_press_n_color"/>

            <stroke android:width="1dip" android:color="#555e7d"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="3dip"/>

            <solid android:color="@color/dialog_btn1_normal_n_color"/>

            <stroke android:width="1dip" android:color="@color/dialog_btn_stroke_n_color"/>
        </shape>
    </item>

</selector>