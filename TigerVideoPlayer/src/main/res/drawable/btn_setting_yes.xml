<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <corners android:radius="3dip"/>

            <solid android:color="#68bdff"/>
            <stroke android:width="1dip" android:color="#00a0e9"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="3dip"/>
            <solid android:color="#0e93fb"/>

            <stroke android:width="1dip" android:color="#00a0e9"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <shape>
            <corners android:radius="3dip"/>
            <solid android:color="@color/dialog_btn2_press_n_color"/>
            <stroke android:width="1dip" android:color="#00a0e9"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="3dip"/>
            <solid android:color="@color/dialog_btn2_normal_n_color"/>
            <stroke android:width="1dip" android:color="#00a0e9"/>
        </shape>
    </item>

</selector>